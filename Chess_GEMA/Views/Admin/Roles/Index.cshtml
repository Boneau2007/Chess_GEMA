@model Chess_GEMA.Models.UserRoleModel

@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">

    <div class="col-lg-10 col-lg-offset-1 col-md-8 col-md-offset-8">

        <div class="moderator-index-head">
            <h2>Identity Roles</h2>
        </div>

        <div class="moderator-index-body">

            <table class="table table-striped table-responsive table-hover">
                <thead>
                <tr>
                    <th>Role Name</th>
                    <th>Number of Users in this Role</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var role in Model.ApplicationRoles)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td></td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Roles", new { roleId = role.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Delete", "Delete", "Roles", new { roleId = role.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="moderator-index-footer">
            @Html.ActionLink("Create", "New", "Roles", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
