@model IEnumerable<Chess_GEMA.Models.File>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Images</h2>

        <table class="table-bordered table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            </thead>
            @foreach (var post in Model)
            {
                    <tr>
                        <td> @post.Name</td>
                        <td><img src="@post.Path" alt="@post.Description" class="img-responsive image-size-thumb"/></td>
                        <td>
                            @if (User.IsInRole("Moderator") || User.IsInRole("Admin"))
                            {
                              @Html.ActionLink("Edit", "Edit", "Image", new{ id = post.Id}, new {@class = "btn btn-warning btn-xs"})
                              @Html.ActionLink("Delete", "Delete", "Image", new { id = post.Id }, new {@class = "btn btn-danger btn-xs"})
                                
                            }
                        </td>
                    </tr>
            }
        </table>

    </div>
</div>

