@model Chess_GEMA.Models.Gallery

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Galarie</h2>
        <div class="jumbotron">
            <h2 class="display-3">Neue Galarie hinzufügen</h2>
            <hr/>
            <fieldset>
                <!-----Alles was auf dieser Seite übergeben wird, wird an die Create-Methode des GalleryControllers übergeben.-->
                @using (Html.BeginForm("Create", "Gallery",FormMethod.Post, new { enctype = "multipart/form-data"} ))
                {
                    <!----Es wird eine Möglichkeit erstellt ein Bild auszuwählen und einen Titel hinzuzufügen.-->
                    <div class="form-group">
                        @Html.AntiForgeryToken()

                        @Html.LabelFor(model => model.Title, htmlAttributes: new {@class = "control-label col-md-2"})
                        @Html.EditorFor(model => model.Title, new {htmlAttributes = new {@class = "form-control"}})

                    </div>
                   

                    <div class="form-group">
                        <div class="col-md-offset-2">
                            @Html.LabelFor(model => model.TitelImage, htmlAttributes: new {@class = "control-label col-md-2"})
                            <input type="file" name="imageBase" />
                        </div>
                    </div>
                    <input type="submit" value="Galerie hinzufügen" class="btn btn-default"/>
                }
            </fieldset>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>