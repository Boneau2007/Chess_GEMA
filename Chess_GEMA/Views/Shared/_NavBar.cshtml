<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("SC. GEMA St. Ingbert", "Index", "Home", null, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">News-Feed<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("News-Feed", "Index", "NewsFeed")</li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <li class="divider"></li>
                            <li>@Html.ActionLink("News-Feed hinzufügen", "Save", "NewsFeed")</li>
                        }
                    </ul>
                </li>

                <li> @Html.ActionLink("FAQ", "Index", "Questions")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Galerie<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Galerien", "Index", "Gallery")</li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                        {
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Galerie hinzufügen", "Create", "Gallery")</li>
                        }
                    </ul>
                </li>


                @if (User.IsInRole("Moderator") && !User.IsInRole("Admin"))
                {
                    // Sichtbar für alle die über die Role "Moderator" verfügen
                    <li>@Html.ActionLink("Moderation", "Index", "Home")</li>
                }

                <li>@Html.ActionLink("Spielzüge", "Index", "Home")</li>
                <li>@Html.ActionLink("Presse", "Index", "Home")</li>
                <li>@Html.ActionLink("Archiv", "Index", "Home")</li>
                <li>@Html.ActionLink("Kontakt", "GetById", "Account", new {UserName = "admin" }, null)</li>


                @if (User.IsInRole("Admin"))
                {
                    // Sichtbar für alle die über die Role "Admin" verfügen
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Config User Roles", "Index", "Admin", new {area = ""}, new {@class = ""})</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Create new Roles", "Index", "Roles", new {area = ""}, new {@class = ""})</li>
                        </ul>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
